---
import { getCollection } from 'astro:content';
import BlogListPage from '../../templates/BlogListPage.astro';

const posts = (await getCollection('blog', ({ data }) => data.lang === 'zh')).sort(
  (a, b) => b.data.date.getTime() - a.data.date.getTime()
);
---

<BlogListPage locale="zh" path={Astro.url.pathname} posts={posts} />
